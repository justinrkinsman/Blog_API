extends layout

block content
  a(href='/sign-up') Sign Up 
  a(href='/login') Log In
  h1= "Posts"
  p Welcome to #{title}
  - let str = JSON.stringify(posts)
  - let parsed = JSON.parse(str)
  each post in parsed
    div.post-layout
      p #{post.title}
      p #{post.body} 
      p #{post.timestamp} 
      p #{post.comments}