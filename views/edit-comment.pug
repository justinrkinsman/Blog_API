extends layout 

block content   
    h1 Edit Comment 
    - let str = JSON.stringify(post)
    - let parsed = JSON.parse(str)
    each comment in parsed
        form(action='' method='POST' id='edit-comment-form')
                label(for='pcommentt_body') Body: 
                textarea#commentt_body.form-control(type='text', name='body')
                    | #{comment.body}
            button.btn.btn-primary(type='submit' ) Submit
            a(href="/")
                p Cancel
        if errors 
            ul 
                for error in errors 
                    li!= error.msg