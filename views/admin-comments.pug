extends layout

block content
    a(href='/admin/dashboard')
        p Back to Home Page
    - let str = JSON.stringify(comments)
    - let parsed = JSON.parse(str)
    if parsed.length > 0
        a(href=`/admin/posts/${parsed[0].post}`)
            p Back to Post
        each comment in parsed
            a(href=`/posts/${comment.post}/comments/${comment._id}` class='link-to-comment')
                div.comment-layout
                    p #{comment.body}
                    p #{comment.timestamp}
                    p #{comment.user.username}
    else
        p No Comments