extends layout 

block content   
    h1 Add Comment 
    form(action='/posts/:id/new-comment' method='POST' id='new-comment-form')
        div.form-group 
            label(for='body') Enter Comment: 
            textarea#comment.form-control(type='text', maxlength=100 name='comment' )
        button.btn.btn-primary(type='submit' ) Submit
        a(href="/posts/:id")
                p Cancel
    if errors 
        ul 
            for error in errors 
                li!= error.msg